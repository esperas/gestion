<mvc:View
          controllerName="ui5.template.controller.App"
          xmlns="sap.m"
          xmlns:mvc="sap.ui.core.mvc"
          displayBlock="true">

    <SplitApp id="SplitAppDemo"
              initialDetail="detail"
              initialMaster="master"
              orientationChange="onOrientationChange">
        <detailPages>
            <Page title="{i18n>homePageTitle}">
                <content>
                    <mvc:XMLView viewName="ui5.template.view.Object"/>
                </content>
            </Page>
        </detailPages>
        <masterPages>
            <mvc:XMLView viewName="ui5.template.view.Menu"/>
        </masterPages>
    </SplitApp>
</mvc:View>
