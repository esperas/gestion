<core:FragmentDefinition
   xmlns="sap.m"
   xmlns:core="sap.ui.core" >
<Dialog
        id="Login"
		title="Se connecter"
		class="sapUiContentPadding" >

        <Label text="Login" />
        <Input type="Text"
               value="{params>/_username}" />
        <Label text="Password" />
        <Input type="Password"
               value="{params>/_password}" />


		<beginButton>
			<Button text="OK" press="onLogin" />
		</beginButton>

	</Dialog>
</core:FragmentDefinition>
