<mvc:View
          controllerName="ecole.famille.controller.Suivi"
          xmlns="sap.m"
          xmlns:mvc="sap.ui.core.mvc">
    <Panel class="sapUiResponsiveMargin"
           width="auto"
           headerText="{coucou>/famille}">
        <content>


            <Button
                    text="Say Hello"
                    press="onShowHello"/>

        </content>
    </Panel>

    <Panel>
        <Table id="idProductsTable"
               inset="false"
               showSeparators="All"
               items="{
                      path: 'coucou>/suivi',
                      sorter: {
                      path: 'date'
                      }
                      }">
            <headerToolbar>
                <Toolbar>
                    <Title text="Products" level="H2"/>
                </Toolbar>
            </headerToolbar>
            <columns>
                <Column
                        width="12em">
                    <Text text="Date" />
                </Column>
                <Column
                        minScreenWidth="Tablet"
                        demandPopin="true">
                    <Text text="Factures" />
                </Column>
                <Column
                        minScreenWidth="Tablet"
                        demandPopin="true"
                        hAlign="Right">
                    <Text text="RÃ¨glements" />
                </Column>
                <Column
                        minScreenWidth="Tablet"
                        demandPopin="true"
                        hAlign="Center">
                    <Text text="Montant" />
                </Column>
            </columns>
            <items>
                <ColumnListItem>
                    <cells>
                        <ObjectIdentifier
                                          title="{coucou>date}"
                                          />
                        <ObjectNumber
                                      number="{coucou>facture}"
                                      unit="EUR" />
                        <ObjectNumber
                                      number="{coucou>reglement}"
                                      unit="EUR" />
                        <Text
                              text="{coucou>libelle}" />

                    </cells>
                </ColumnListItem>
            </items>
        </Table>
    </Panel>

</mvc:View>
