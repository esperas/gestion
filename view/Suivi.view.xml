<mvc:View
          controllerName="ecole.gestion.controller.Suivi"
          xmlns="sap.m"
          xmlns:t="sap.ui.table"
          xmlns:l="sap.ui.layout"
          	xmlns:core="sap.ui.core"
          xmlns:mvc="sap.ui.core.mvc">

    <Page title="{i18n>homePageTitle}"
          showNavButton="true"
		  navButtonPress="onNavBack">



    <Panel >

        <Button icon="sap-icon://letter" text="test Compta" press="onCompta"/>
        <Button icon="sap-icon://document" text="Création d'une entrée" tooltip="Nouvelle entrée"  press="onCreate"/>
        <Button icon="sap-icon://refresh" text="Rafraichir les données" press="onRefresh"/>
        <Button icon="sap-icon://loan" text="Seulement Factures impayées" press="onFilter"/>
        <Label text="Date de dernière MAJ" />
        <DatePicker
			value="{params>/dateMAJ}" valueFormat="yyyy-MM-dd" displayFormat="long"
		    change="changeDateMAJ"
		    class="sapUiSmallMarginBottom"
            width="10rem"/>
                         <IconTabBar
		              id="idIconTabBar"
		              select="handleIconTabBarSelect"
		              class="sapUiResponsiveContentPadding">
		              <items>
			             <IconTabFilter
				            icon="sap-icon://loan"
				            iconColor="Negative"
				            count="{/ProductCollectionStats/Counts/Weight/Overweight}"
				            text="Impayés"
				            key="Overweight" />
		              </items>
	               </IconTabBar>
        <Table
				id="tsuivi"
                inset="false"
                growing="true"
		        growingThreshold="100"
		        growingScrollToLoad="false"
				selectionMode="None"
				items="{suivi>/suivi/}"
				ariaLabelledBy="title">
            <headerToolbar>
			 <Toolbar>
				<Title text="Suivi des paiements" level="H3"/>
                 <ComboBox
                    selectionChange="FilterFamille"
                    id="filtreFamille"
				    showSecondaryValues= "true"
				    items="{
					   path: 'users>/users/',
					   sorter: { path: 'famille' }
				    }"
                      >
                     <core:ListItem text="{users>famille}" key="{users>famille}" additionalText = "{users>nom}"/>
                 </ComboBox>


						<Button tooltip="Tri, filtrer etc..." icon="sap-icon://drop-down-list" press="onFilterOpen" />
			</Toolbar>
		  </headerToolbar>
        				<infoToolbar>
					<Toolbar
						id="vsdFilterBar"
						active="true"
						visible="false"
						press="[handleViewSettingsDialogFilterBarPressed, views.control.tableViewSettingsDialog]">
						<Label id="vsdFilterLabel" text="?" />
					</Toolbar>
				</infoToolbar>
        <columns>
			<Column	>
				<Text text="Date" />
			</Column>
			<Column	width="8em"	>
				<Text text="Famille" />
			</Column>
			<Column	>
				<Text text="Facture" />
			</Column>
			<Column	>
				<Text text="Paiement" />
			</Column>
			<Column	width="16em"	>
				<Text text="Libellé" />
			</Column>
			<Column	>
				<Text text="N° Pièce" />
			</Column>
			<Column	>
				<Text text="Période" />
			</Column>
 			<Column	>
				<Text text="Type pièce" />
			</Column>
			<Column	>
				<Text text="Status" />
			</Column>
			<Column	width="2em">
				<Text text="Edit" />
			</Column>
			<Column	width="2em">
				<Text text="Payer" />
			</Column>

        </columns>

        <items>
            <ColumnListItem>
		      <cells>
                  <Text text="{ path: 'suivi>date',
				                  type: 'sap.ui.model.type.Date',
				                  formatOptions: {
					                   style: 'short',
					                   source: {
						                  pattern: 'yyyy-MM-dd'
					                   }
				                  }
                                }"/>
                     <Text text="{suivi>famille}"/>

                     <Text text="{suivi>facture}"/>

                     <Text text="{suivi>paiement}"/>

                     <Text text="{suivi>libelle}"/>

                     <Text text="{suivi>piece}"/>

                     <Text text="{suivi>periode}"/>

                     <Text text="{suivi>typedoc}"/>

                     <Text text="{suivi>status}"/>

                     <Button icon="sap-icon://edit" press="onDetail"/>

                     <Button icon="sap-icon://loan"
                        press="onPaiement"
                        visible="{ parts: [{path: 'suivi>typedoc'}, {path: 'suivi>status'}],
		                                      formatter: '.formatter.isPayable'}"
                        />

				</cells>
			</ColumnListItem>
		</items>
        </Table>
    </Panel>
    </Page>
</mvc:View>
