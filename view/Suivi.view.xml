<mvc:View
          controllerName="ecole.famille.controller.Suivi"
          xmlns="sap.m"
          xmlns:mvc="sap.ui.core.mvc">
    <Panel class="sapUiResponsiveMargin"
           width="auto"
           headerText="{famille>famille}">
        <content>

            <Text  text="{famille}" class="sapUiSmallMarginEnd" />
            <Button
                    text="Say Hello"
                    press="onShowHello"/>

        </content>
    </Panel>

    <List
          headerText="{i18n>invoiceListTitle}"
          class="sapUiResponsiveMargin"
          width="auto"
          items="{famille>/suivi}" >
        <items>
            <ObjectListItem
                            title="{famille>montant} x {invoice>ProductName}"/>
        </items>
    </List>
</mvc:View>
