<mvc:View
          controllerName="ecole.famille.controller.Suivi"
          xmlns="sap.m"
          xmlns:mvc="sap.ui.core.mvc">
    <Panel class="sapUiResponsiveMargin"
           width="auto"
           headerText="{coucou>/famille}">
        <content>


            <Button
                    text="Say Hello"
                    press="onShowHello"/>

        </content>
    </Panel>

    <List
          headerText="{i18n>invoiceListTitle}"
          class="sapUiResponsiveMargin"
          width="auto"
          items="{coucou>/suivi}" >
        <items>
            <ObjectListItem
                            title="{coucou>date}"
                            number="{coucou>facture}"
                            numberUnit="EUR"/>
        </items>
    </List>
</mvc:View>
