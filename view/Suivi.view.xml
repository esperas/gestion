<mvc:View
          controllerName="ecole.famille.controller.Suivi"
          xmlns="sap.m"
          xmlns:l="sap.ui.layout"
          xmlns:mvc="sap.ui.core.mvc">
    <Panel class="sapUiResponsiveMargin"
           width="auto"
           headerText="Famille : {famille>/famille}">
        <content>
            <l:VerticalLayout class="sapUiSmallMargin" >
                <Text  text="{famille>/nom}" />
                <Text  text="{famille>/adresse1}" />
                <Text  text="{famille>/adresse2}" />
                <Text  text="{famille>/ville}" />
            </l:VerticalLayout>
        </content>
    </Panel>

    <Panel >
        <ObjectHeader
                      title="Suivi des paiements"
                      intro="Dernière mise à jour : le 24/01/2016"
                      number="{famille>/solde}"
                      numberUnit="EUR"
                      >
<!--		<statuses>
			<ObjectStatus
				text="Some Damaged"
				state="Error" />
			<ObjectStatus
				text="In Stock"
				state="Success" />
		</statuses>-->
        </ObjectHeader>
        <Table id="idProductsTable"
               inset="false"
               fixedLayout="false"
               showSeparators="All"
               items="{
                      path: 'famille>/suivi',
                      sorter: {
                      path: 'date'
                      }
                      }">

            <columns>
                <Column
                       flexible="true"
                        resizable="true"
                        autoResizable="true"
                        width="auto">
                    <Text text="Date" />
                </Column>
                <Column
                        flexible="true"
                        resizable="true"
                        autoResizable="true"
                        width="auto">
                    <Text text="Factures" />
                </Column>
                <Column
                        flexible="true"
                        resizable="true"
                        autoResizable="true"
                        width="auto">
                    <Text text="Règlements" />
                </Column>
                <Column
                        flexible="true"
                        resizable="true"
                        autoResizable="true"
                        width="auto">
                    <Text text="Libellé" />
                </Column>
            </columns>
            <items>
                <ColumnListItem>
                    <cells>
                        <ObjectIdentifier
                                          title="{famille>date}"
                                          />
                        <ObjectNumber
                                      number="{famille>facture}"
                                       />
                        <ObjectNumber
                                      number="{famille>reglement}"
                                       />
                        <Text
                              text="{famille>libelle}" />

                    </cells>
                </ColumnListItem>
            </items>
        </Table>
    </Panel>

</mvc:View>
